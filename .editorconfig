# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8
trim_trailing_whitespace = true

[*]
indent_style = space
indent_size = 4

[*.php]
indent_style = space

[{setup,constants,ext_conf_template}.txt]
indent_style = space

[*.json]
indent_style = space
indent_size = 2

[*.html]
indent_style = tab

[*.rst]
indent_style = tab

[Makefile]
indent_style = tab
